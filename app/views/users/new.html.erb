<h1>Sign Up</h1>
<%= form_for @user do |f| %>
    <% if @user.errors.any? %>
        <h2>Form is invalid</h2>
        <% @user.errors.full_messages do |msg| %>
            <p>%= msg %></p>
        <% end %>
    <% end %>
        <p>
            <%= f.label :email %>
            <%= f.text_field :email %>
        </p>

        <p>
            <%= f.label :password %>
            <%= f.password_field :password %>
        </p>

        <p>
            <%= f.label :password_confirmation %>
            <%= f.password_field :password_confirmation %>
        </p>

        <p><%= f.submit %></p>

<% end %>
